{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"${CLAUDE_PLUGIN_ROOT}/hooks/check-omnisharp.ps1\"",
            "timeout": 180,
            "on_os": ["windows"]
          },
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/check-omnisharp.sh\"",
            "timeout": 180,
            "on_os": ["macos", "linux"]
          }
        ]
      }
    ]
  }
}
